<div class='form-group'>
  <label>{{localize 'ABILITY_SKILL_LABEL'}}:</label>
  <select name='abilitySkill' required>
    <option value=''>{{localize 'SELECT_ABILITY_OR_SKILL'}}</option>
    <optgroup label='{{localize "ABILITIES_LABEL"}}'>
      {{#each abilityChoices}}
        <option value='ability:{{@key}}'>{{this}}</option>
      {{/each}}
    </optgroup>
    {{#if skillsByAbility.str}}
      <optgroup label='{{localize "STRENGTH_SKILLS_LABEL"}}'>
        {{#each skillsByAbility.str}}
          <option value='skill:{{@key}}'>{{this.label}}</option>
        {{/each}}
      </optgroup>
    {{/if}}
    {{#if skillsByAbility.dex}}
      <optgroup label='{{localize "DEXTERITY_SKILLS_LABEL"}}'>
        {{#each skillsByAbility.dex}}
          <option value='skill:{{@key}}'>{{this.label}}</option>
        {{/each}}
      </optgroup>
    {{/if}}
    {{#if skillsByAbility.int}}
      <optgroup label='{{localize "INTELLIGENCE_SKILLS_LABEL"}}'>
        {{#each skillsByAbility.int}}
          <option value='skill:{{@key}}'>{{this.label}}</option>
        {{/each}}
      </optgroup>
    {{/if}}
    {{#if skillsByAbility.wis}}
      <optgroup label='{{localize "WISDOM_SKILLS_LABEL"}}'>
        {{#each skillsByAbility.wis}}
          <option value='skill:{{@key}}'>{{this.label}}</option>
        {{/each}}
      </optgroup>
    {{/if}}
    {{#if skillsByAbility.cha}}
      <optgroup label='{{localize "CHARISMA_SKILLS_LABEL"}}'>
        {{#each skillsByAbility.cha}}
          <option value='skill:{{@key}}'>{{this.label}}</option>
        {{/each}}
      </optgroup>
    {{/if}}
  </select>
</div>
<div class='form-group'>
  <label>{{localize 'PLAYERS_LABEL'}}:</label>
  <select name='players' multiple required>
    {{#each players}}
      <option value='{{this.value}}'>{{this.label}}</option>
    {{/each}}
  </select>
</div>