<div class="form-group">
  <label>{{localize "ABILITY_LABEL"}}:</label>
  <select name="ability" required>
    <option value="">{{localize "SELECT_ABILITY"}}</option>
    {{#each abilityChoices}}
      <option value="{{@key}}">{{this}}</option>
    {{/each}}
  </select>
</div>
<div class="form-group">
  <label>{{localize "PLAYERS_LABEL"}}:</label>
  <select name="players" multiple required>
    {{#each players}}
      <option value="{{this.value}}">{{this.label}}</option>
    {{/each}}
  </select>
</div>